{
  "lerna": "2.9.1",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["master"],
      "ignoreChanges": [
        "README.md",
        "CHANGELOG.md",
        ".travis.yml",
        "appveyor.yml",
        ".gitignore",
        ".clang-format",
        "tslint.json",
        "src/test/**/*"
      ]
    }
  }
}
